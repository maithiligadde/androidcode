<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="android:Theme.Material">
            <!-- Main theme colors -->
            <!--   your app branding color for the app bar -->
            <item name="android:colorPrimary">@color/purple</item>
            <!--   darker variant for the status bar and contextual app bars -->
            <item name="android:colorPrimaryDark">@color/purple</item>
            <!--   theme UI controls like checkboxes and text fields -->
            <item name="android:colorAccent">@color/purple</item>
        </style>

    <style name="mine" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">italic</item>
        </style>

</resources>
